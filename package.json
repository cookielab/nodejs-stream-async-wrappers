{
    "name": "@cookielab.io/stream-async-wrappers",
    "version": "0.2.0",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/cookielab/nodejs-stream-async-wrappers.git"
    },
    "main": "lib/index.js",
    "scripts": {
        "build": "bin/build",
        "watch": "bin/watch",
        "lint": "bin/lint || true",
        "flow": "bin/flow || true",
        "test": "bin/jest",
        "check-all": "bin/check-all || true",
        "prepare": "bin/build"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "dependencies": {
        "semaphore-async-await": "^1.5.1"
    },
    "devDependencies": {
        "@cookielab.io/eslint-config-server": "0.0.6",
        "@cookielab.io/eslint-plugin-custom-rules": "0.0.2",
        "babel-cli": "6.26.0",
        "babel-core": "6.26.3",
        "babel-eslint": "8.2.3",
        "babel-jest": "23.0.1",
        "babel-plugin-transform-flow-strip-types": "6.22.0",
        "babel-preset-node8": "1.2.0",
        "eslint": "4.19.1",
        "eslint-plugin-filenames": "1.3.2",
        "eslint-plugin-flowtype": "2.49.3",
        "eslint-plugin-import": "2.12.0",
        "flow-bin": "0.74.0",
        "flow-copy-source": "2.0.0",
        "jest": "23.1.0"
    },
    "jest": {
        "roots": [
            "<rootDir>/src",
            "<rootDir>/tests"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/bootstrap.js"
        ],
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.{js,flow}"
        ]
    }
}
